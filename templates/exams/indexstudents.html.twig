
{% extends 'basestudent.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
{% endblock %}

{% block MainBody %}
    <table class="table table-striped table-dark" style="width:99%;">
    <thead >
        <tr class="info">
            <th >Teacher</th>
            <th >Exam</th>
            <th >Category</th>
            <th >Create Date</th>
            <th >Result</th>
            <th style="width:10%;">Teacher</th>
        </tr>
          </thead>
        {% for entry in examstwig %}
            <tr style="font-size:15px; font-weight:bold">
                <td>{{ entry.teachername }}</td>
                <td>{{ entry.description }}</td>
                <td>{{ entry.categoryDsc }}</td>
                <td>{{ entry.createddate }}</td>
                <td>{{ entry.result }}</td>
                <td>
                    <a href="{{ path('exam_edit', {examid: entry.id}) }}">
                        <button class="btn btn-primary">
                            <span class="glyphicon glyphicon-pencil">Do Exam</button>
                        </a>
                </td>
            </tr>
        {% endfor %}
</table>
{% endblock %}
